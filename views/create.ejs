<%- include("partials/header.ejs") %>
    <h1 class="text-center my-4">Create a Post</h1>

    <form action="submit" id="create" method="post">
        <fieldset class="d-flex flex-column form-group ">
            <label for="title">Title:</label><br>
            <input type="text" name="title" id="title" class="col-lg-6 col-sm-12" required><br>
            <label for="author">Author:</label><br>
            <input type="text" name="author" id="author" class="col-lg-6 col-sm-12" required><br>
            <label for="content">Your Content:</label><br>
            <textarea name="content" id="content" class="col-lg-6 col-sm-12" cols="40" rows="25"
                required></textarea><br>
        </fieldset>
    </form>

    <input type="submit" form="create" class="btn btn-outline-success submit-btn" value="Submit">
    <a href="/"><button class="btn btn-outline-dark">Cancel</button></a>

    <%- include("partials/footer.ejs") %>
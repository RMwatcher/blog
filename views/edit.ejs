<%- include("partials/header.ejs") %>
    <h1>Edit your Post</h1>
    <form action="update" id="update" method="post">
        <label for="title">Title:</label><br>
        <input type="text" name="title" id="title" size="40" required><br>
        <label for="author">Author:</label><br>
        <input type="text" name="author" id="author" size="40" required><br>
        <label for="content">Your Content:</label><br>
        <textarea name="content" id="content" cols="60" rows="30" required></textarea><br>
    </form>
    <input type="submit" form="update" value="Submit">
    <a href="/"><button>Cancel</button></a>
